<article class="product">
    <Product::Image
    src={{@product.image}}
    alt="A picture of {{@product.title}}"
  />
  <div class="details">
      <h3>
      
        {{@product.title}}
      
    </h3>
    <div class="detail brand">
      <span>Brand:</span> {{@product.brand}}
    </div>
    <div class="detail occasion">
      <span>Occasion:</span> {{@product.occasion}}
    </div>
    <div class="detail cost">
      <span>Price:</span> {{@product.cost}}
    </div>
    <button clas="button">
      <LinkTo @route="product" >
    Buy Now
  </LinkTo>
    </button>
  </div>
</article>
